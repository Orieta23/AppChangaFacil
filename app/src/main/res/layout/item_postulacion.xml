<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="@android:color/white">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título del trabajo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/txtFechaPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Te postulaste hace 3 días"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Ubicación -->
        <TextView
            android:id="@+id/txtUbicacionPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Pilar"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />

        <!-- Sueldo -->
        <TextView
            android:id="@+id/txtSueldoPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💰 $25.000"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="2dp" />

        <!-- Botón personalizado -->
        <Button
            android:id="@+id/btnVerPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver postulación"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_gravity="end"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/boton_redondo" />

    </LinearLayout>
</androidx.cardview.widget.CardView>