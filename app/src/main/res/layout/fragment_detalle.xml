<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="16dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del Trabajo"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publicado por: Usuario X"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del trabajo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del trabajo"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location_pin"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="Ubicación"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSueldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_money"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="Sueldo"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnPostularmeDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Postularme"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/botonAzulClaro"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>