<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- Título del trabajo -->
        <TextView
            android:id="@+id/txtTituloPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayudante"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#111111" />

        <!-- Fecha de postulación -->
        <TextView
            android:id="@+id/txtFechaPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Te postulaste hace 3 días"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="6dp" />

        <!-- Ubicación -->
        <TextView
            android:id="@+id/txtUbicacionPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📍 Pilar"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />

        <!-- Sueldo -->
        <TextView
            android:id="@+id/txtSueldoPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💰 $25000"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="2dp" />

        <!-- Botón "Ver postulación" -->
        <Button
            android:id="@+id/btnVerPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver postulación"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/boton_redondo"
            android:layout_gravity="end"
            android:layout_marginTop="14dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>