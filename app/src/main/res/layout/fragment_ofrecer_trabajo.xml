<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Ícono y título -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_work_outline"
            android:tint="#0D47A1"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publicá tu oferta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="24dp" />

        <!-- Campos de entrada -->
        <EditText
            android:id="@+id/editTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título del trabajo"
            android:inputType="text"
            android:background="@drawable/edittext_gris_borde"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <EditText
            android:id="@+id/editUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicación"
            android:inputType="text"
            android:background="@drawable/edittext_gris_borde"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <EditText
            android:id="@+id/editSalario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salario"
            android:inputType="number"
            android:background="@drawable/edittext_gris_borde"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <EditText
            android:id="@+id/editDescripcion"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Descripción"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@drawable/edittext_gris_borde"
            android:padding="14dp"
            android:layout_marginBottom="24dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <Button
            android:id="@+id/btnPublicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUBLICAR"
            android:textAllCaps="true"
            android:backgroundTint="#0D47A1"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>