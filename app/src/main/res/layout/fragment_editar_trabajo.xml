<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar publicación"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginBottom="24dp" />

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del trabajo"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Mantenimiento"
            android:background="@drawable/edittext_gris_borde"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Detalles del puesto"
            android:background="@drawable/edittext_gris_borde"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:minLines="3"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Ubicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Palermo"
            android:background="@drawable/edittext_gris_borde"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Sueldo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sueldo"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtSueldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: 96000"
            android:background="@drawable/edittext_gris_borde"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Botón Guardar (celeste) -->
        <Button
            android:id="@+id/btnGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR CAMBIOS"
            android:textAllCaps="true"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Botón Eliminar (gris oscuro) -->
        <Button
            android:id="@+id/btnEliminarTrabajo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ELIMINAR PUBLICACIÓN"
            android:textAllCaps="true"
            android:backgroundTint="#444444"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp"
            android:elevation="2dp" />

    </LinearLayout>
</ScrollView>