<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/txtTituloTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título del trabajo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/txtDescripcionTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descripción"
            android:textSize="14sp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/txtEmpresaTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Empresa"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtUbicacionTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="📍 Ubicación"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtSueldoTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="💰 Sueldo"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtFechaTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="🕒 Fecha"
            android:textSize="12sp"
            android:textColor="#999999" />

        <!-- Botones centrados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnEditarPublicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar publicación"
                android:textColor="#FFFFFF"
                android:backgroundTint="#607D8B"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btnVerPostulantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver postulantes"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>