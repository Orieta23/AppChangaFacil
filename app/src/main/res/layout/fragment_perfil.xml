<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_user_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_circle_gray"
            android:contentDescription="Imagen de perfil" />

        <!-- Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editNombre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:enabled="false"
                android:background="@drawable/bg_edittext"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnEditarNombre"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar nombre"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:enabled="false"
                android:background="@drawable/bg_edittext"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnEditarEmail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar email"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Teléfono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editTelefono"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:inputType="phone"
                android:enabled="false"
                android:background="@drawable/bg_edittext"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnEditarTelefono"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar teléfono"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Ubicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editUbicacion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Ubicación"
                android:enabled="false"
                android:background="@drawable/bg_edittext"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnEditarUbicacion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar ubicación"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Experiencia general -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/editExperiencia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Experiencia general"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:maxLines="8"
                android:gravity="top|start"
                android:enabled="false"
                android:background="@drawable/bg_edittext"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnEditarExperiencia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar experiencia"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Selector de tipo de usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

        </LinearLayout>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:textAllCaps="true"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="16sp"
            android:background="@drawable/bg_button_primary"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <!-- Botón Ver calificaciones -->
        <Button
            android:id="@+id/btnVerCalificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/blue_chamba"
            android:text="Ver mis calificaciones y reseñas"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>