<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Imagen de empresa -->
        <ImageView
            android:id="@+id/imgEmpresa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_user_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:contentDescription="Imagen de la empresa" />

        <!-- Título: Nombre de la empresa -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la empresa/empleador"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la empresa"
            android:background="@drawable/edittext_gris_borde"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Título: Correo electrónico -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo electrónico"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editEmailEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:background="@drawable/edittext_gris_borde"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Título: Teléfono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTelefonoEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:background="@drawable/edittext_gris_borde"
            android:padding="12dp"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Título: Ubicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editUbicacionEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicación"
            android:background="@drawable/edittext_gris_borde"
            android:padding="12dp"
            android:inputType="textCapWords"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Título: Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editDescripcionEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:background="@drawable/edittext_gris_borde"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Botón GUARDAR -->
        <Button
            android:id="@+id/btnGuardarEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:backgroundTint="#004AAD"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="14dp"
            android:layout_marginBottom="12dp" />

        <!-- Botón VER CALIFICACIONES -->
        <Button
            android:id="@+id/btnVerCalificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver calificaciones y reseñas"
            android:backgroundTint="#555555"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>