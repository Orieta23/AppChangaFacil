<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTituloDialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificar usuario"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Barra de calificación -->
    <RatingBar
        android:id="@+id/ratingInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:theme="@style/Widget.AppCompat.RatingBar.Small" />

    <!-- Campo de comentario -->
    <EditText
        android:id="@+id/editComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe un comentario (opcional)"
        android:inputType="textMultiLine"
        android:gravity="top|start"
        android:minLines="3"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Botón enviar -->
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:backgroundTint="@color/blue_chamba"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>